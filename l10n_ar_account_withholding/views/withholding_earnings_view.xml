<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_account_move_line_earnings_perceptions_tree" model="ir.ui.view">
            <field name="name">Withholdings and perceptions</field>
            <field name="model">account.move.line</field>
            <field name="mode">primary</field>
            <field name="priority">99</field>
            <field name="inherit_id" ref="account.view_move_line_tree"/>
            <field name="arch" type="xml">
                <field name="debit" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <field name="credit" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <field name="journal_id" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <field name="date_maturity" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <field name="account_id" position="after">
                    <field name="tax_line_id"/>
                </field>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_earnings_perceptions_account_move_line">
            <field name="name">Withholdings and perceptions</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.move.line</field>
            <field name="view_id" ref="view_account_move_line_earnings_perceptions_tree"/>
            <field name="view_mode">tree</field>
    <!--        <field name="domain">[('tax_line_id', '!=', False)]</field>-->
    <!--        <field name="context">{'search_default_unsettled_tax': 1}</field>-->
        </record>

        <record model="ir.actions.server" id="action_withholdings_suffered">
            <field name="name">Withholdings suffered</field>
            <field name="type">ir.actions.server</field>
            <field name="model_id" ref="account.model_res_company"/>
            <field name="binding_model_id" ref="model_account_move_line"/>
            <field name="binding_view_types">list</field>
            <field name="state">code</field>
            <field name="code">
                action = env.company.get_tax_withholdings_suffered()
            </field>
        </record>

        <menuitem
            id="withholdings_suffered_menu"
            action="action_withholdings_suffered"
            parent="l10n_ar_ux.account_withholding_menu"
            sequence="1"/>

        <record model="ir.actions.server" id="action_withholdings_earnings_practiced">
            <field name="name">Withholdings of earnings practiced</field>
            <field name="type">ir.actions.server</field>
            <field name="model_id" ref="account.model_res_company"/>
            <field name="binding_model_id" ref="model_account_move_line"/>
            <field name="binding_view_types">list</field>
            <field name="state">code</field>
            <field name="code">
                action = env.company.get_tax_withholdings_earnings_practiced()
            </field>
        </record>

        <menuitem
            id="withholding_earnings_menu"
            action="action_withholdings_earnings_practiced"
            parent="l10n_ar_ux.account_withholding_menu"
            sequence="2" />



    </data>
</openerp>
